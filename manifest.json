{
  "manifest_version": 3,
  "name": "Replace All Images",
  "version": "1.0",
  "description": "Replaces all images on a page with your chosen image.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
